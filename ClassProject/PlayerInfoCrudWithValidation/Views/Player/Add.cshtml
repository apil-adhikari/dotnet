@model PlayerInfoCrudWithValidation.Models.Player

@{

}

<h1>Add Players Information</h1>
<form method="post" enctype="multipart/form-data">
    <div class="row mt-3">
        <div class="col-md-6">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Please enter your name" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Date of Birth</label>
            <input type="date" class="form-control" placeholder="Please enter date of birth" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label class="form-label">Gender</label>
            <select class="form-control" asp-for="Sex">
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Sex" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Nationality</label>
            <input type="text" class="form-control" placeholder="Please enter your nationality" asp-for="Nationality" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" placeholder="Please enter your address" asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" placeholder="Please enter your phone number" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <label for="Position">Player Position</label>
            <select class="form-control" id="Position" asp-for="PlayerPosition">
                <option value="">Select Position</option>
                <option value="Goalkeeper">Goalkeeper</option>
                <option value="Center Back">Center Back</option>
                <option value="Full Back">Full Back</option>
                <option value="Left Back">Left Back</option>
                <option value="Right Back">Right Back</option>
                <option value="Wing Back">Wing Back</option>
                <option value="Sweeper">Sweeper</option>
                <option value="Central Midfielder">Central Midfielder</option>
                <option value="Defensive Midfielder">Defensive Midfielder</option>
                <option value="Deep-Lying Playmaker">Deep-Lying Playmaker</option>
                <option value="Box-to-Box Midfielder">Box-to-Box Midfielder</option>
                <option value="Attacking Midfielder">Attacking Midfielder</option>
                <option value="Wide Midfielder">Wide Midfielder</option>
                <option value="Left Winger">Left Winger</option>
                <option value="Right Winger">Right Winger</option>
                <option value="Second Striker">Second Striker</option>
                <option value="Winger">Winger</option>
                <option value="Wide Forward">Wide Forward</option>
                <option value="Center Forward">Center Forward</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="PlayerPosition" class="text-danger"></span>
        </div>

        @* <div class="col-md-6">
            <label class="form-label">Select your profile picture</label>
            <input type="file" class="form-control" accept="image/*" asp-for="ProfilePicture">
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div> *@
    </div>

    <div class="row mt-3">
        <div class="col-6">
            <button type="submit" class="btn btn-primary float-start" asp-action="Index">Back to list</button>
        </div>

        <div class="col-6">
            <button type="submit" class="btn btn-primary float-end">Submit</button>
        </div>
    </div>
</form>
