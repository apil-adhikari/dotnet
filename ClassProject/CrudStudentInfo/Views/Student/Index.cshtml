@model List<StudentInfo>

@* <h2 class="text-center mb-3">List of Students</h2>
<hr /> *@
<div class="container col-xs-12 box bg-info py-3 rounded mb-3">
    <div class="row ">
        <div class="col-6">
            <h2>Manage <strong>Students</strong></h2>
        </div>

        <div class="col-6 align-content-center  ">
            <a class="btn btn-primary float-end" asp-controller="Student" asp-action="Add">Add New Student</a>
        </div>
    </div>
</div>

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th class="text-center  ">Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td class="text-center">@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Department</td>
                <td>@student.Address</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a>

                    <a class="btn btn-primary btn-sm" asp-controller="Student" asp-action="Detail" asp-route-id="@student.Id">Detail</a>

                    <a class="btn btn-danger btn-sm" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

