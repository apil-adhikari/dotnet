@model CrudStudentInfo.Models.StudentInfo

<h1>Update Student Data</h1>
@if (Model is null)
{
    <p>No student found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" placeholder="Please enter your Id" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Please enter your name" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="name@email.com" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label>Department</label>
            <select class="form-control" asp-for="Department">
                <option disabled selected>Select your Department</option>
                <option value="BIT">BIT</option>
                <option value="CSIT">CSIT</option>
                <option value="BCA">BCA</option>
            </select>

        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" placeholder="Please enter your address" asp-for="Address" />
        </div>

        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary float-end">Update</button>
            </div>

            <div class="col">
                <button type="submit" class="btn btn-secondary" asp-action="Index">Cancle</button>
            </div>
        </div>

    </form>
}