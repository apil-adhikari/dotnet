@model CrudStudentInfo.Models.StudentInfo

<h2>Please confirm if you want to delete this students data</h2>

@if (Model is null)
{
    <p>No student found with this Id.</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="number" class="form-control" placeholder="Please enter your Id" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Please enter your name" asp-for="Name" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" placeholder="name@email.com" asp-for="Email" readonly />
        </div>

        <div class="mt-3">
            <label>Department</label>
            <input type="text" class="form-control" asp-for="Department" readonly />

        </div>

        <div class="mt-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" readonly />
        </div>

        <div class="row mt-3">

            <div class="col">
                <button type="submit" class="btn btn-danger float-end">Delete</button>
            </div>

            <div class="col">
                <button type="submit" class="btn btn-secondary" asp-action="Index">Cancle</button>
            </div>
        </div>
    </form>
}