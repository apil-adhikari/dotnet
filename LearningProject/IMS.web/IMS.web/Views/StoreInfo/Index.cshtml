@model IEnumerable<IMS.Models.Entity.StoreInfo>

    <div class="row">
        <div class="col-12">
            <a class="btn btn-primary float-end" asp-action="AddEdit">Add New</a>
        </div>
    </div>

    <div class="row col-12">
        <table class="table talbe-border">

            <thead>
                <tr>
                    <th>Store Name</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Registration Number</th>
                    <th>Pan Number</th>
                    <th>IsActive</th>
                    <th>ModifiedBy</th>
                    <th>ModifiedDate</th>
                    <th>Action</th>
                    
                </tr>
            </thead>
            
            <tbody>
            @foreach(var items in Model)
            {
               <tr>
                   <td>
                       @items.StoreName
                   </td><td>
                       @items.Address
                   </td><td>
                       @items.PhoneNumber
                   </td><td>
                       @items.RegistrationNumber
                   </td><td>
                       @items.PanNumber
                   </td><td>
                       @items.IsActive
                   </td>

                   <td>
                       @items.ModifiedBy
                   </td>

                    <td>
                        @items.ModifiedDate
                    </td>

                   <td>
                       <a class="btn btn-primary btn-sm" asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                       <a class="btn btn-danger btn-sm" asp-action="Delete" onclick="return confirm('Are you sure you want to delete?')" asp-route-id= "@items.Id">Delete</a>
                   </td>
               </tr>
            }
        </tbody>
        </table>
    </div>