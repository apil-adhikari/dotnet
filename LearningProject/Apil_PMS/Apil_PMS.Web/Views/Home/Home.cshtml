@{
    ViewData["Title"] = "Product Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom Styles -->
    <style>
        body {
            background-color: #f8f9fa; /* Bootstrap's light gray background color */
            color: #212529; /* Bootstrap's dark gray text color */
            font-family: 'Roboto', sans-serif;
            overflow-x: hidden; /* Prevent horizontal scroll on small screens */
        }

        .hero {
            background-image: url("[Image of product organization](https://www.pexels.com/photo/people-organizing-products-on-shelves-in-a-warehouse-1036620/)"); /* Replace with your product image */
            background-size: cover;
            background-position: center;
            min-height: 80vh; /* Set minimum height for different screen sizes */
            display: flex;
            align-items: center;
            justify-content: center;
            color: #212529; /* Ensure text color is visible */
            text-align: center;
            padding: 100px 0;
        }

            .hero h1 {
                color: #6c757d; /* Bootstrap's secondary text color */
                font-size: 3.5rem;
                font-weight: bold;
                text-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
            }

            .hero p {
                font-size: 1.5rem;
                margin-top: 20px;
            }

        .call-to-action {
            background-color: #dc3545; /* Bootstrap's danger color */
            color: #fff; /* White text color */
            padding: 15px 30px;
            border-radius: 50px;
            font-weight: bold;
            transition: background-color 0.3s ease-in-out;
            margin-top: 30px;
            display: inline-block;
        }

            .call-to-action:hover {
                background-color: #c82333; /* Darker shade of red */
                color: #fff;
                cursor: pointer;
            }

        .features {
            padding: 100px 0;
            background-color: #f8f9fa; /* Bootstrap's light gray background color */
        }

        .feature {
            text-align: center;
            margin-bottom: 50px;
        }

        .feature-icon {
            font-size: 4rem;
            color: #dc3545; /* Bootstrap's danger color */
            margin-bottom: 20px;
        }

        .feature-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .feature-desc {
            line-height: 1.6;
        }

        .trusted-logos {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 50px;
        }

        .trusted-logo {
            margin: 20px;
            opacity: 0.7;
            transition: opacity 0.3s ease-in-out;
        }

            .trusted-logo img {
                width: 150px;
                max-width: 100%;
            }

                .trusted-logo img:hover {
                    opacity: 1;
                }

        .footer {
            background-color: #343a40; /* Dark background color */
            padding: 20px 0;
            color: #fff; /* White text color */
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="hero">
        <div class="container">
            <h1>Effortless Product Management</h1>
            <p>Organize, track, and manage your products with ease.</p>
            <a href="#" class="btn call-to-action">Learn More</a>
        </div>
    </header>

    <section class="features">
        <div class="container">
            <div class="row">
                <div class="col-md-4 feature">
                    <i class="fas fa-plus-square feature-icon"></i>
                    <h3 class="feature-title">Add Products & Categories</h3>
                    <p class="feature-desc">Seamlessly add new products and organize them into relevant categories for easy access.</p>
                </div>
                <div class="col-md-4 feature">
                    <i class="fas fa-eye feature-icon"></i>
                    <h3 class="feature-title">View & Manage Inventory</h3>
                    <p class="feature-desc">Gain real-time insights into your inventory levels and manage stock efficiently.</p>
                </div>
                <div class="col-md-4 feature">
                    <i class="fas fa-chart-line feature-icon"></i>
                    <h3 class="feature-title">Track & Analyze Performance</h3>
                    <p class="feature-desc">Gain valuable insights into product performance and optimize your offerings.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-KElYugqZGTxdqIA0zsHtxoqlbsbQzOMgh5MhpjT/9zlE6fRglfoKgSHN2lE2lk9Y+" crossorigin="anonymous"></script>
</body>
</html>
